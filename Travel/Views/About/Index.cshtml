@using Travel.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="content">
    <div class="wrap">
        <div class="about">
            <div align="center"><h3>Hakkımızda</h3></div>
            @foreach (var x in Model)
            {
                <div align="center"><img src="~/web/images/logo.png" style="width:400px;height:400px;" alt="resim" /></div>
                <div align="center"><h4>@x.Aciklama</h4></div>
            }
            <div class="about-team">
                <div class="about-text">
                    <div class="about-team">
                        <div class="about-text">
                            <div align="center"><h3 class="ind">Bizleri Youtube'da Takip Edin :)</h3></div>
                            <div align="center">
                                <iframe width="560" height="315" src="https://www.youtube.com/embed/u5wrBSP9sdo" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <iframe width="1000" height="600" src="https://www.youtube.com/embed/AX3judlCgJ8" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <h3 class="ind">Bu Blog Sitemizde Paylaşacaklarımız</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="~/web/images/python.jpg" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>Python</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="~/web/images/csharp.png" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>C#</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="~/web/images/asp.jpg" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>Asp.Net Mvc</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="~/web/images/cc.png" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>C++</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <link href="~/web3/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


